<h1>Login</h1>

<div class="container">
  <div class="d-flex justify-content-center h-100">
    <div class="card rounded-0"

    <ul>
    <% if flash[:messages] %>
      <li><%= flash[:messages] %></li>
    <% end %>
    <% if flash[:logout] %>
      <li><%= flash[:logout] %></li>
    <% end %>
    </ul>

    <div class="login card-body">
      <%= form_tag '/login' do %>
      <div class="form-group">
        <label for="<%= :username %>"> username: </label>
        <input type="username" class="form-control rounded" name="username" id="<%= :username %>">
      </div>
      <div class="form-group">
        <label for="<%= :password %>"> password: </label>
        <input type="password" class="form-control rounded" name="password" id="<%= :password %>">
      </div>
      <br>
      <div class="form-group text-center">
      <%= submit_tag "Login" , class: "btn btn-outline-danger"%>
      </div>
      <% end %>

      <div class="card-footer">
        <div class="d-flex justify-content-center links">
          <%= link_to "New Here?", new_dj_path  %>
        </div>

      </div>
    </div>



    </div>
  </div>

</div>
